<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.webakruti.foodorder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/food_logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">
        <activity android:name=".UI.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- <activity android:name=".LoginActivity" /> -->
        <activity android:name=".UI.LoginActivity" />
        <activity android:name=".UI.RegisterActivity" />
        <activity android:name=".UI.HomeActivity"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name=".UI.ForgotPasswordActivity" />
        <activity android:name=".UI.GoOutForLunchDinnerActivity" />
        <activity android:name=".UI.FoodDeliveryRestroActivity" />
        <activity android:name=".UI.CartActivity" />
        <activity android:name=".UI.CheckoutActivity" />
        <activity android:name=".UI.PaymentActivity" />
        <activity android:name=".UI.SuccessActivity"></activity>
    </application>

</manifest>